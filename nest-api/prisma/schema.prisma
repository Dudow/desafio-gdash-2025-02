generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Weather {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  timestamp     DateTime
  location      String
  temperature   Float
  humidity      Int
  windSpeed     Float
  condition     String
  precipitation Float
  createdAt     DateTime @default(now())

  @@map("weatherList")
}
